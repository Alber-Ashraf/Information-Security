    </div>
    <div class="clear"></div>

    <div class="cont">
        <a id="back" class="btn btn-primary" asp-area="" asp-controller="Cryptography" asp-action="Decryption">Back</a>
    </div>


</body>

<style>
    /* CSS styles for the page */
    .column {
        float: left;
        width: 50%;
        padding: 10px;
    }

    .clear {
        clear: both;
    }

    .form-control {
        width: 80%
    }

    #key {
        width: 48%
    }

    #iv {
        width: 26%
    }

    .cont {
        text-align: center;
    }

        .cont a {
