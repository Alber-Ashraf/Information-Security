                <input type="text" class="form-control" id="key" name="key" placeholder="Key : " required />
            </div>
            <br />
            <div class="form-group">
                <input type="text" class="form-control" id="iv" name="iv" placeholder="Iv : " required />
            </div>
            <br />
            <button class="btn btn-primary" type="submit">Decrypt</button>

        </form>
        <br />

        <div class="form-control">
            <label></label>
            @ViewBag.Massage
