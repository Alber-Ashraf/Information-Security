<html>
<head>
    <title>Decryption</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <h1>Decryption Algorithms</h1>
    <div class="list">
        <ul>
            <li>
                <div class="title">Caesar Cipher</div>
                <div class="actions">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Caesar" asp-action="CaesarDecryption">Decrypt</a>
                </div>
            </li>
            <li>
                <div class="title">Monoalphabetic Cipher</div>
                <div class="actions">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Monoalphabetic" asp-action="MonoalphabeticDecryption">Decrypt</a>
                </div>
            </li>
            <li>
                <div class="title">Playfair Cipher</div>
                <div class="actions">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Playfair" asp-action="PlayfairDecryption">Decrypt</a>
                </div>
            </li>
            <li>
                <div class="title">Polyalphabetic Cipher</div>
                <div class="actions">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Polyalphabetic" asp-action="PolyalphabeticDecryption">Decrypt</a>
                </div>
            </li>
            <li>
                <div class="title">Vigenere Cipher</div>
                <div class="actions">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Vigenere" asp-action="VigenereDecryption">Decrypt</a>
                </div>
            </li>
            <li>
                <div class="title">Autokey Cipher</div>
                <div class="actions">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Autokey" asp-action="AutokeyDecryption">Decrypt</a>
                </div>
            </li>
        </ul>
    </div>
    <div class="cont">
        <a id="back" class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="index">Back</a>
    </div>
</body>
