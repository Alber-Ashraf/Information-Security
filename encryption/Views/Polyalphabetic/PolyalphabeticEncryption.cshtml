<html>
<head>

</head>

<body>

    <h2>Polyalphabetic Cipher</h2>
    <div class="column">
        <form method="post">

            <div class="form-group">
                <input type="text" class="form-control" id="plainText" name="plainText" placeholder="PlainText : " required/>
            </div>
            <br />

            <div class="form-group">
                <input type="text" class="form-control" id="key" name="key" placeholder="Key : " required/>
            </div>
            <br />

            <button class="btn btn-primary" type="submit">Encrypt</button>

        </form>
        <br />

        <div class="form-control">
            <label>Encryption: </label>
            @ViewBag.Massage
        </div>
    </div>
    <div class="column" id="Example">
        <p>Example: </p>
        <div class="form-control">
            <label>Plaintext: </label>
            The attack will be today
        </div>
        <br />
        <div class="form-control">
            <label>Key: </label>
            Polyalphabetic
        </div>
        <br />
        <div class="form-control">
            <label>Encryption: </label>
            IVP AEIHCL PQNA MC EDKAZ
        </div>
    </div>
    <div class="clear"></div>

    <div class="cont">
        <a id="back" class="btn btn-primary" asp-area="" asp-controller="Cryptography" asp-action="Encryption">Back</a>
    </div>


</body>

<style>
    /* CSS styles for the page */
    body {
        margin: 0;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        font-size: 16px;
        line-height: 1.25;
        color: #333;
        background-color: #f0f0f0;
    }

    .column {
        float: left;
        width: 50%;
        padding: 10px;
    }

    .clear {
        clear: both;
    }

    .form-control {
        width: 80%
    }

    .cont {
        text-align: center;
    }

        .cont a {
            display: inline-block;
            margin-top: 30px;
        }

    #Example {
        opacity: 0.5;
    }
</style>

</html>
